<p id="notice"><%= notice %></p>

<h1>Products</h1>

<h2>Upload Your Excel</h2>
<div>
  <%= form_tag bulk_uploads_products_path, :method=> "post", :multipart=>true  do%>
    <label for="myfile">Select a file:</label>
    <input type="file" id="myfile" name="products_file"><br><br>
    <input type="submit">
  <%end%>

</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Material</th>
      <th>Size</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.material %></td>
        <td><%= product.size %></td>
        <td><%= product.color %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
